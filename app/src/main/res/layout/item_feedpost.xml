<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_post_image"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:background="#EEEEEE"
                android:layout_marginEnd="12dp"/>


            <TextView
                android:id="@+id/tv_post_user_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="שם משתמש"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/tv_post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/01/2025"
                android:textSize="12sp"
                android:textColor="#888888" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>


        <TextView
            android:id="@+id/tv_post_book_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שם הספר"
            android:textStyle="bold"
            android:textColor="#3F51B5"/>

        <TextView
            android:id="@+id/tv_post_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שם הסופר"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>
        <RatingBar
            android:id="@+id/ratingBar_post"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:isIndicator="true"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_post_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="תוכן הביקורת"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btn_comments"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="תגובות"
            android:backgroundTint="#FF9800"
            android:layout_gravity="start" />

    </LinearLayout>
</androidx.cardview.widget.CardView>