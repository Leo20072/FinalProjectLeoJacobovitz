<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:paddingTop="32dp"
    android:background="@color/lavender"
    tools:context=".EditProfileActivity">

    <!-- כותרות עליונות -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="עריכת"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="הפרופיל שלך"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="עדכן את פרטיך האישיים ואת סיסמתך"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="30dp"/>

    <!-- כרטיס CardView לעריכת הנתונים -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="עדכון פרטים"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/Cyan_green"/>

            <!-- 1. שם מלא -->

            <!-- 2. כתובת מייל -->
            <EditText
                android:id="@+id/edit_fullname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/baseline_supervised_user_circle_24"
                android:drawablePadding="8dp"
                android:hint="שם מלא"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/edit_email"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="אימייל"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"/>

            <!-- 3. כפתור שינוי סיסמה (עיצוב שונה) -->
            <Button
                android:id="@+id/button_change_password"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="שנה סיסמה (לחץ כאן)"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/lavender"
                app:strokeColor="@color/lavender"
                app:strokeWidth="2dp"
                app:cornerRadius="20dp"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:paddingStart="16dp"
                android:gravity="center_vertical|start"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                />

            <!-- כפתור שמירה -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="שמור שינויים"
                android:id="@+id/save_changes_button"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/Cyan_green"
                app:cornerRadius = "20dp"/>

            <!-- כפתור ביטול/חזור -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel_text"
                android:text="בטל וחזור"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/lavender"
                android:textSize="18sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>